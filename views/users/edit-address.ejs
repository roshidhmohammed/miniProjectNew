<%- include("../layouts/userProfileHeader.ejs") %>
<!-- endheader -->





<div class="profile-info col-md-9">
          
    <div class="panel">
      <div class="bio-graph-heading">
          <h1>ADDRESS</h1>
          <h4>Welcome<%=user.name %> </h4>
      </div>
      
                          
                          <div class="container-fluid pt-5">
                              <div class="row px-xl-5">
                                  <div class="col-lg-8">
                                      <div class="mb-4">
                                          <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                                      </div>
                                      <form action="/edit-address/<%= address._id%>" method="post">
                                          <div class="row">
                                              <div class="col-md-6 form-group">
                                                  <label>First Name</label>
                                                  <input class="form-control form-control-rounded" style="border-color:#5600ff" value="<%= address.firstname %>" name="firstname" type="text" placeholder="first name" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>Last Name</label>
                                                  <input class="form-control" type="text"  style="border-color:#5600ff" value="<%= address.lastname %>" name="lastname" placeholder="last name" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>E-mail</label>
                                                  <input class="form-control" type="text" style="border-color:#5600ff" value="<%= address.email %>" name="email" placeholder="email" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>Mobile No</label>
                                                  <input class="form-control" type="text" name="mobno" style="border-color:#5600ff" value="<%= address.mobno %>"  placeholder="mobile number" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>Address Line 1</label>
                                                  <input class="form-control" type="text" name="address1" style="border-color:#5600ff" value="<%= address.address1 %>" placeholder="address line 1" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>Address Line 2</label>
                                                  <input class="form-control" type="text" name="address2" style="border-color:#5600ff" value="<%= address.address2 %>" placeholder="address line 2" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>country</label>
                                                  <input class="form-control" type="text" name="country" style="border-color:#5600ff" value="<%= address.country %>" placeholder="country" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>City</label>
                                                  <input class="form-control" type="text" name="city" style="border-color:#5600ff" value="<%= address.city %>" placeholder="city" required>
                                              </div>
                                              <div class="col-md-6 form-group">
                                                  <label>State</label>
                                                  <input class="form-control" type="text" name="state"  style="border-color:#5600ff" value="<%= address.state %>" placeholder="state" required>
                                              </div>
                                              <div class="col-md-6 form-group mb-3">
                                                  <label>ZIP Code</label>
                                                  <input class="form-control" type="text"name="zip" style="border-color:#5600ff" value="<%= address.zip %>" placeholder="zipcode" required>
                                              </div>
                                              <button value="submit" class="btn btn-success">Submit</button>
                                          </div>
                                      </form>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </thead>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>

<%- include("../layouts/userfooter.ejs") %>